# Run the container with `docker run -p 3000:3000 -t doubledrop-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system doubledrop-api && \
          adduser --system -G doubledrop-api doubledrop-api

COPY dist/apps/doubledrop-api doubledrop-api/
RUN chown -R doubledrop-api:doubledrop-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix doubledrop-api --omit=dev -f install

CMD [ "node", "doubledrop-api" ]
