FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system clieko-api && \
          adduser --system -G clieko-api clieko-api

COPY dist/apps/clieko-api clieko-api/
