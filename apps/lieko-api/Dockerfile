# Build the docker image with `npx nx docker-build lieko-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t lieko-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system lieko-api && \
          adduser --system -G lieko-api lieko-api

COPY dist/apps/lieko-api lieko-api/
RUN chown -R lieko-api:lieko-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix lieko-api --omit=dev -f install

CMD [ "node", "lieko-api" ]
