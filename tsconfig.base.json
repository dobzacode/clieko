{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@api/core/drizzle": ["libs/api/core/drizzle/src/index.ts"],
      "@clieko-workspace/header": ["libs/client/shared/ui/header/src/index.ts"],
      "@clieko-workspace/login": ["libs/client/shared/ui/login/src/index.ts"],
      "@clieko-workspace/logout": ["libs/client/shared/ui/logout/src/index.ts"],
      "@client/features/admin": ["libs/client/features/admin/src/index.ts"],
      "@client/features/callback": [
        "libs/client/features/callback/src/index.ts"
      ],
      "@client/features/home": ["libs/client/features/home/src/index.ts"],
      "@client/shared/ui/ui-button-helm": [
        "libs/client/shared/ui/ui-button-helm/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
