      "@api/core/drizzle": ["libs/api/core/drizzle/src/index.ts"],
      "@api/user/data-access": ["libs/api/user/data-access-user/src/index.ts"],
      "@api/user/feature": ["libs/api/user/feature-user/src/index.ts"],
      "@doubledrop-workspace/interface-user": [
        "libs/api/user/interface-user/src/index.ts"
      ],
      "@client/features/admin": ["libs/client/features/admin/src/index.ts"],
      "@client/features/callback": [
        "libs/client/features/callback/src/index.ts"
      ],
      "@client/features/home": ["libs/client/features/home/src/index.ts"],
      "@client/features/landing": ["libs/client/features/landing/src/index.ts"],
      "@client/features/utils": ["libs/api/user/utils-user/src/index.ts"],
      "@client/shared/ui/header": [
        "libs/client/shared/ui/ui-header/src/index.ts"
      ],
      "@client/shared/ui/login": [
        "libs/client/shared/ui/ui-button-login/src/index.ts"
      ],
      "@client/shared/ui/logout": [
        "libs/client/shared/ui/ui-button-logout/src/index.ts"
      ],
      "@client/shared/ui/signup": [
        "libs/client/shared/ui/ui-button-signup/src/index.ts"
      ],
      "@client/shared/ui/ui-button-helm": [
        "libs/client/shared/ui/ui-button-helm/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
